@model UserNotificationInfo
<a class="nav-link" data-toggle="dropdown" href="#">
    <i class="far fa-bell"></i>
    @if (Model.MsgItems.Count > 0)
    {
        <span class="badge badge-warning navbar-badge">@Model.TotalNotification</span>
    }

</a>
@if (Model.MsgItems.Count > 0)
{
<div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
    <span class="dropdown-item dropdown-header">@Model.TotalNotification Notifications</span>
    <div class="dropdown-divider"></div>
    @foreach (var item in Model.MsgItems)
    {
        <a href="#" class="dropdown-item">
            @switch (item.NotifyType)
            {
                case "M":
                    <i class="fas fa-envelope mr-2"></i>
                    break;
                case "R":
                    <i class="fas fa-users mr-2"></i>
                    break;
                case "RPT":
                    <i class="fas fa-file mr-2"></i>
                    break;
                default:
                    break;
            }
            @item.Message
            <span class="float-right text-muted text-sm">@item.TimeRef</span>
        </a>
        <div class="dropdown-divider"></div>
    }

    <div class="dropdown-divider"></div>
    <a href="#" class="dropdown-item dropdown-footer">See All Notifications</a>
</div>
}