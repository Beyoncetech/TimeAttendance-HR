@model List<UserMessageInfo>    
        <a class="nav-link" data-toggle="dropdown" href="#">
            <i class="far fa-comments"></i>
            @if (Model.Count > 0)
            {
                <span class="badge badge-danger navbar-badge">@Model.Count.ToString()</span>
            }
        </a>
        @if (Model.Count > 0)
        {
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                @foreach (var item in Model)
                {
                    <a href="#" class="dropdown-item">
                        <!-- Message Start -->
                        <div class="media">
                            <img src="@item.UserAvatar" alt="User Avatar" class="img-size-50 mr-3 img-circle">
                            <div class="media-body">
                                <h3 class="dropdown-item-title">
                                    @item.Name
                                    <span class="float-right text-sm text-danger"><i class="fas fa-star"></i></span>
                                </h3>
                                <p class="text-sm">@item.Message</p>
                                <p class="text-sm text-muted"><i class="far fa-clock mr-1"></i>@item.TimeRef</p>
                            </div>
                        </div>
                        <!-- Message End -->
                    </a>
                    <div class="dropdown-divider"></div>
                }
                <a href="#" class="dropdown-item dropdown-footer">See All Messages</a>
            </div>
        }    
